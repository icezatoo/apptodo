{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "module": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@apptodo/*": ["libs/*"],
      "@apptodo/todolib": ["libs/todolib/src/index.ts"],
      "@apptodo/layout": ["libs/layout/src/index.ts"],
      "@apptodo/material": ["libs/material/src/index.ts"],
      "@apptodo/data-models": ["libs/data-models/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
